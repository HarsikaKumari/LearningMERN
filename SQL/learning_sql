-- Create table:
CREATE TABLE customer ( id int NOT NULL, name string, price Money, PRIMARY KEY (id));
-- insert in table
INSERT INTO customer VALUES (2, "pencil", 0.8, 12)
INSERT INTO customer VALUES (1, "Pen", 1.20)
INSERT INTO customer (id, name) VALUES (2,"pencil")INSERT INTO customer (id, name) VALUES (2,"pencil")
-- show table
SELECT * FROM customer 
SELECT name, price FROM customer 
SELECT * FROM customer WHERE id = 1
SELECT * FROM customer WHERE id > 1
-- updating TABLE
UPDATE customer
SET price = 0.8
WHERE id = 2;

UPDATE customer
SET stock = 32
WHERE id = 1;

UPDATE customer
SET stock = 12
WHERE id = 2;
-- alter table
ALTER TABLE customer
ADD stock int;
-- DELETE record
DELETE FROM customer 
WHERE id = 2;
-- FOREIGN KEY concept
CREATE TABLE Orders (
    OrderID int NOT NULL,
    OrderNumber int NOT NULL,
    PersonID int,
    PRIMARY KEY (OrderID),
    FOREIGN KEY (PersonID) REFERENCES customer(id)
);
